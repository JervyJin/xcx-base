.zhanshi {
  float: left;
  width: 100%;
  height: 90rpx;
  margin:30rpx 0;
}
.zhanshi > view {
  float: left;
  width: 90rpx;
  height: 90rpx;
  margin-right: 6rpx;
  /* background: #b0b9c8 */
}
.zhanshi :last-child {
  margin-right: 0
}
.warp {
  background: #f5f8fd;
  margin-bottom: 80rpx
}
.xuanze {
  position: fixed;
  bottom: 0;
  width: 100%
}
.warp_img {
  position: absolute;
  height: 60rpx;
  width: 60rpx;
  /* background: red; */
  right: 10rpx;
  top: 0
}
.warp_img > image {
  width: 70%;
  height: 70%;
  margin-top: 10%
}
.dingwei {
  height: 72rpx;
  width: 72rpx;
  position: absolute;
  right: 0rpx;
  top: 0
}
.dingwei > image {
  width: 100%;
  height: 100%
}
.in {
  float: left;
  margin-top: 50rpx;
  margin-rihgt:20rpx;
}
.shanchu {
  height: 100rpx;
  width: 100%;
  background: #2e82ff;
  position: fixed;
  bottom: 0;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx
}
.shanchu  > text {
  /* letter-spacing:30rpx; */
  color: #fff;
  font-size: 36rpx
}
.none {
  width: 100%;
  text-align: center
}
.none > image {
  height: 316rpx;
  margin-top: 200rpx
}
.none > text {
  display: block;
  color: #797979;
  font-size: 24rpx;
  margin-top: 50rpx
}
.shuxin {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 30rpx;
  width: 120rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  background: #2e82ff;
  border-radius: 10rpx;
  color: #fff
}