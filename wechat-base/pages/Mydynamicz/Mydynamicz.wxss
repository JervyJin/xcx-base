/* pages/Mydynamicz/Mydynamicz.wxss */
.nr {
  padding-top: 40rpx;
  width: 92%;
  min-height: 310rpx;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20rpx 30rpx 0 30rpx;
  overflow: hidden;
  position: relative;
}
.van-checkbox__icon--round {
  background: #f2f5fd
}
.first {
  width: 90rpx;
  height: 100%;
  float: left
}
.first > image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 14rpx;
}
.right {
  width: 570rpx;
  height: 100%;
  float: left;
  margin-left: 30rpx;
  position: relative
}
.right > .user {
  font-size: 30rpx;
  font-weight: 550;
  display: flex;
  justify-content: space-between
}
.right > .flux {
  font-size: 24rpx;
  margin-top: 30rpx;
  width: 100%;
  float: left
}
.right > .flux > text {
  float: left;
  padding: 0 20rpx;
  border-right: 1px solid #b0b9c8;
  font-weight: 800;
  font-size: 24rpx;
}
.right > .flux  :first-child {
  padding-left: 0
}
.right > .flux :last-child {
  border: 0
}
.diqu {
  margin-top: 20rpx;
  float: left;
  width: 100%
}
.diqu > text {
  display: inline-block;
  font-size: 24rpx;
}
.diqu :first-child {
  width: 284rpx;
  height: 42rpx;
  border-radius:10rpx;
  border: 1px solid #2e82ff;
  line-height: 42rpx;
  text-align: center;
  color: #2e82ff;
  font-weight: 600
}
.diqu > .last {
  margin-left: 30rpx;
  width: 116rpx;
  height: 42rpx;
  border-radius: 10rpx;
  border: 1px solid #fd304e;
  line-height: 42rpx;
  text-align: center;
  color: #fd304e;
  font-weight: 600
}
.sheng {
  width: 100%;
  float: left;
  font-size: 24rpx;
   word-wrap: break-word;
