/* pages/phone/phone.wxss */
page {
  background: #f5f8fd
}
.phone {
  margin-top: 30rpx;
}
view {
  width: 100%;
  height: 150rpx;
  background: #ffffff;
  border-bottom: 1px solid #f5f8fd;
    font-size: 30rpx;
}
.text {
  padding: 0 80rpx;
  
}
view > text {
  display: inline-block;
  padding: 0 60rpx;
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  border-right: 1px solid #f5f8fd;
  margin-top: 40rpx
}
view > input {
  width: 400rpx;
  float: left;
  height: 150rpx;
  line-height: 150rpx;
  margin-left: 50rpx
}
.input {
  width: 250rpx;
    font-size: 30rpx;
}
.button {
  padding:0;
  border: 0;
  font-size: 30rpx;
  text-align: center;
  width: 214rpx;
  color: #2e82ff;
  font-weight: 550;
  height: 150rpx;
  margin: 0;
  line-height: 150rpx;
}
button{
  width: 600rpx;
  background: #2e82ff;
  color: #fff;
  margin-top: 200rpx;
  border-radius: 50rpx;
}
