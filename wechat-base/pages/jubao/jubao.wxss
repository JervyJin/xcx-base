/* pages/jubao/jubao.wxss */
.value-class {
  flex: none !important;
  color: #797979 !important
}
page {
  background: #f5f9fc;
  width: 99%
}
.first {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  padding-left:30rpx; 
  position: relative;
  background: #fff;
  font-weight: 600;
  width: 96%
}
.first :first-child {
  display: block;
  position: absolute;
  width: 10rpx;
  height: 26rpx;
  background: #2e82ff;
  left: 0;
  top: 32rpx;
}
textarea {
  width: 92%;
  height: 241rpx;
  background: #fff;
  padding: 30rpx;
  font-size: 30rpx
}
.top1 {
  height: 280rpx;
  width: 95%;
  background: #ffffff;
  position: relative;
  padding: 0rpx 20rpx 0 20rpx;
  margin-top: 2rpx
}
.top1 > view {
  height: 214rpx;
  width: 214rpx;
  /* background: pink; */
  margin: 10rpx;
  float: left;
  position: relative;
  margin-top: 40rpx;
}
.top1 > view > image {
  width: 100%;
  height: 100%
}
.top1 > view .img2 {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top: 0;
  right: 0
}
button {
  width: 80%;
  border-radius: 50rpx;
  background: #2e82ff;
  margin-bottom: 50rpx;
  color: #fff
}
.van-cell__title {
  color: #797979 !important
}