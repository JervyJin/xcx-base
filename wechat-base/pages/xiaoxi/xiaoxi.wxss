/* pages/xiaoxi/xiaoxi.wxss */
.right {
  width: 92%;
  height: 100%;
  float: left;
  margin-left: 30rpx;
}

.right > .user {
  font-size: 32rpx;
  font-weight: 550;
}

.right > .flux {
  font-size: 24rpx;
  margin-top: 24rpx;
  width: 100%;
  float: left;
}

.right > .flux > text {
  float: left;
  padding: 0 20rpx;
  border-right: 1px solid #b0b9c8;
  font-weight: 500;
  font-size: 32rpx;
  /* max-width: 124rpx; */
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right > .flux  :first-child {
  padding-left: 0;
}

.right > .flux :last-child {
  border: 0;
}
.zhanshi {
  float: left;
  width: 100%;
  height: 90rpx;
  margin-top: 20rpx;
  /* background: red; */
  margin-bottom: 30rpx;
  position: relative;
}

.zhanshi > view {
  float: left;
  width: 90rpx;
  height: 90rpx;
  margin-right: 6rpx;
  /* background: #b0b9c8; */
}

.xqimg > image {
  height: 100%;
  width: 100%;
}

.zhanshi :last-child {
  margin-right: 0;
}

.sheng {
  width: 100%;
  float: left;
  font-size: 28rpx;
  margin-top: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #797979;
  word-wrap: break-word;
}
.tix {
  width: 92%;
  padding: 30rpx;
  font-size: 30rpx;
  background: #f7f7f7;
  float: left
}